{% extends 'admin/layout.html.twig' %}

{% block title %}Validation Professeur{% endblock %}

{% block body %}
    <h1>Utilisateurs en attente de validation</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Voir réponses</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.firstname }} {{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('admin_professor_answers', {id: user.id}) }}">Voir réponses</a>
                </td>
                <td>
                    <a href="{{ path('admin_professor_accept', {id: user.id}) }}" class="btn btn-success">Accepter</a>
                    <a href="{{ path('admin_professor_reject', {id: user.id}) }}" class="btn btn-danger">Refuser</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}