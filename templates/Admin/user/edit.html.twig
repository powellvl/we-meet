{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Modifier l'utilisateur{% endblock %}

{% block admin_content %}
    <div class="card">
        <div class="card-header">
            <h5>Modifier l'utilisateur</h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.firstname) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.lastname) }}
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-text">Laissez vide pour conserver le mot de passe actuel.</div>
                    {{ form_errors(form.password) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.roles, 'Rôles', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.roles, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.roles) }}
                </div>

                <div class="d-flex justify-content-between">
                    <div>
                        <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>
                        <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="btn btn-info">
                            <i class="fas fa-eye"></i> Voir détails
                        </a>
                    </div>
                    <button class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
