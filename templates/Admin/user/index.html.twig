{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Liste des utilisateurs{% endblock %}

{% block admin_content %}
    

    <div class="card">
        <div class="card-header">
            <h5>Gestion des utilisateurs</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Rôles</th>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge bg-primary">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="btn btn-info" title="Détails">
                                    <i class='bx  bx-eye-alt'  ></i> 
                                </a>
                                <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-warning" title="Modifier">
                                    <i class='bx  bx-cog'  ></i> 
                                </a>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal{{ user.id }}" title="Supprimer">
                                    <i class='bx  bx-trash-alt'  ></i> 
                                </button>
                            </div>

                            <!-- Modal de suppression -->
                            <div class="modal fade" id="deleteModal{{ user.id }}" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Confirmer la suppression</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Êtes-vous sûr de vouloir supprimer l'utilisateur <strong>{{ user.firstname }} {{ user.lastname }}</strong> ?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                            <form method="post" action="{{ path('app_admin_user_delete', {'id': user.id}) }}">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit" class="btn btn-danger">Supprimer</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun utilisateur trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="admin-actions mb-4">
        <a href="{{ path('app_admin_user_new') }}" class="btn btn-create">
            <i class="fas fa-plus"></i> Créer Utilisateur
        </a>
    </div>
    </div>
{% endblock %}
