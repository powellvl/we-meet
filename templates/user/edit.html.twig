{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    {% include 'components/_header.html.twig' %}
    
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="mb-0">Modifier mon profil</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.firstname, 'Pr√©nom', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.firstname) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.lastname) }}
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.password, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                                <div class="form-text">Laissez vide pour conserver votre mot de passe actuel.</div>
                                {{ form_errors(form.password) }}
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Retour au profil
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Enregistrer
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
